<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.DNFAuctionWidget.AppWidgetContainer"
    android:columnCount="3"
    android:rowCount="3"
    android:id="@+id/auction_widget">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"
        android:layout_alignBottom="@+id/item_image"
        android:layout_toRightOf="@+id/item_image"/>

    <ImageButton
        android:id="@+id/refresh_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="6dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/refresh_icon"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/min_price_text"
        android:text="최저가(개당)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@+id/item_image"/>

    <ImageView
        android:id="@+id/gold1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="1dp"
        android:layout_toRightOf="@id/min_price_text"
        android:layout_alignBottom="@id/min_price_text"/>

    <TextView
        android:id="@+id/auction_minPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="2dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_toRightOf="@id/gold1"
        android:layout_alignBottom="@+id/min_price_text"/>

    <TextView
        android:id="@+id/avg_price_text"
        android:text="평균가"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@+id/min_price_text"/>

    <ImageView
        android:id="@+id/gold2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="1dp"
        android:layout_alignRight="@+id/gold1"
        android:layout_alignBottom="@+id/avg_price_text"/>

    <TextView
        android:id="@+id/auction_avgPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="2dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_alignRight="@+id/auction_minPrice"
        android:layout_alignBottom="@+id/avg_price_text"/>
</RelativeLayout>