<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.DNFAuctionWidget.AppWidgetContainer"
    android:id="@+id/auction_widget">

    <TextView
        android:id="@+id/auction_minPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:textColor="?attr/appWidgetTextColor"
        android:textSize="24sp"
        android:textStyle="bold|italic"/>
    <TextView
        android:id="@+id/auction_avgPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="?attr/appWidgetTextColor"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/auction_minPrice"/>
</RelativeLayout>